= form_for @weapon do |f|
  - if @weapon.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weapon.errors.count, "error")} prohibited this weapon from being saved:"
      %ul
        - @weapon.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :ammo
    = f.number_field :ammo
  .field
    = f.label :zombie_id
    = f.number_field :zombie_id
  .actions
    = f.submit 'Save'
